<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- Team 1 - Player 1 -->
    <EditText
        android:id="@+id/team1_player1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/amaranth_bold"
        android:textColorHint="#827C7C"
        android:hint="Team 1 - Player 1"
        android:minHeight="48dp"
        android:padding="10dp" />

    <!-- Team 1 - Player 2 -->
    <EditText
        android:id="@+id/team1_player2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Team 1 - Player 2"
        android:minHeight="48dp"
        android:padding="10dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/amaranth_bold"
        android:textColorHint="#827C7C"/>

    <!-- Team 2 - Player 1 -->
    <EditText
        android:id="@+id/team2_player1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/amaranth_bold"
        android:textColorHint="#827C7C"
        android:hint="Team 2 - Player 1"
        android:minHeight="48dp"
        android:padding="10dp" />

    <!-- Team 2 - Player 2 -->
    <EditText
        android:id="@+id/team2_player2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/amaranth_bold"
        android:textColorHint="#827C7C"
        android:hint="Team 2 - Player 2"
        android:minHeight="48dp"
        android:padding="10dp" />

    <EditText
        android:id="@+id/dateEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/amaranth_bold"
        android:textColorHint="#827C7C"
        android:hint="Date"
        android:minHeight="48dp"
        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
        android:focusable="false"
        android:padding="10dp" />

    <!-- Time Picker -->
    <EditText
        android:id="@+id/timeEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/amaranth_bold"
        android:textColorHint="#827C7C"
        android:hint="Time"
        android:minHeight="48dp"
        android:drawableEnd="@android:drawable/ic_menu_recent_history"
        android:focusable="false"
        android:padding="10dp" />

    <!-- CheckBox for System Date and Time -->
    <CheckBox
        android:id="@+id/read_system_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Date and Time from the System"
        android:textColor="#000000"
        android:fontFamily="@font/amaranth_bold"
        android:textColorHint="#827C7C"/>

    <!-- Buttons for Add and Start -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#8A898C"
            android:text="Add"
            android:fontFamily="@font/amaranth_bold"
            android:textColorHint="#827C7C"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/start_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="#8A898C"
            android:text="Start"
            android:fontFamily="@font/amaranth_bold"
            android:textColorHint="#827C7C"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
