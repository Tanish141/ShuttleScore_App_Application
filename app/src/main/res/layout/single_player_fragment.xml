<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- Player 1 -->
    <EditText
        android:id="@+id/team1_player1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Player 1"
        android:minHeight="48dp"
        android:padding="10dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/amaranth_bold"
        android:textColorHint="#827C7C"/>

    <!-- Player 2 -->
    <EditText
        android:id="@+id/team2_player1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/amaranth_bold"
        android:textColorHint="#827C7C"
        android:hint="Player 2"
        android:minHeight="48dp"
        android:padding="10dp" />

    <!-- Date Picker -->
    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/amaranth_bold"
        android:textColorHint="#827C7C"
        android:hint="Date"
        android:minHeight="48dp"
        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
        android:focusable="false"
        android:padding="10dp" />

    <!-- Time Picker -->
    <EditText
        android:id="@+id/timeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/amaranth_bold"
        android:textColorHint="#827C7C"
        android:hint="Time"
        android:minHeight="48dp"
        android:drawableEnd="@android:drawable/ic_menu_recent_history"
        android:focusable="false"
        android:padding="10dp" />

    <CheckBox
        android:id="@+id/systemDateTimeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amaranth_bold"
        android:minHeight="48dp"
        android:text="Read Date and Time from the System"
        android:textColor="#000000"
        android:textColorHint="#827C7C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#8A898C"
            android:text="Add"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/amaranth_bold"
            android:textColorHint="#827C7C"/>

        <Button
            android:id="@+id/start_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="#8A898C"
            android:text="Start"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/amaranth_bold"
            android:textColorHint="#827C7C"/>
    </LinearLayout>
</LinearLayout>
